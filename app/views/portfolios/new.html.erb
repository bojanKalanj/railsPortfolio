<h1>create a new portfolio</h1>

<% if @portfolio_item.errors.any? %>
    <%= @portfolio_item.errors.full_messages %>
<% end %>


<%= form_for(@portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |technology_form| %>
      <li>
        <%= technology_form.label :name %>
        <%= technology_form.text_field :name %>
      </li>
    <% end %>

    <li></li>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
